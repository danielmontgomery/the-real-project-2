<!DOCTYPE html>
<html>
<head>
  <title>P22</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<link href='http://fonts.googleapis.com/css?family=Playfair+Display+SC:900,400,900italic,400italic' rel='stylesheet' type='text/css'>
</head>
<body>
<div class="container">

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>

        </button>
        <a class="navbar-brand" class="navTitle">Picture Competition</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', pictures_path %></li>
          <li><%= link_to 'Leaderboard', leaderboards_path %></li>
    

        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'All Users', users_path %></li> 

            <% if current_user != nil %>
              <li><a href="#">Welcome, <%= current_user.username %>.</a></li>
              <li><%= link_to "log out", sessions_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "sign up", new_user_path, method: :get %></li>
              <li><%= link_to "log in", new_sessions_path %></li>
            <% end %>
        </ul>

      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
  <div class="content">
<%= yield %>
  </div>
</body>
</html>
